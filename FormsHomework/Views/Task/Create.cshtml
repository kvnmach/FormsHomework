@model FormsHomework.Models.Task
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Name</label>
        <input name="Name" class="form-control" placeholder="Your name">
    </div>
    <div class="form-group">
        <label>Description</label>
        <input name="Description" type="text" class="form-control" placeholder="Task Description"/>
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(x => x.IsDone)
            Task Complete?
        </label>
    </div>
    <p>
        <button type="submit" class="btn btn-primary btn-lg" value="Create">Submit</button>
    </p>
}

